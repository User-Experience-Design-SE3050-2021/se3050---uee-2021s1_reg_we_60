<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B"
    tools:context=".MyAccount">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/loginBack"
        android:layout_width="37dp"
        android:layout_height="39dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/circularImageView"
        app:layout_constraintEnd_toStartOf="@+id/profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/next" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="204dp"
        android:layout_height="37dp"
        android:layout_marginTop="48dp"
        android:text="PROFILE"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginStart="141dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/propic"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="395dp"
        android:layout_height="706dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/vie_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circularImageView">


        <TextView
            android:id="@+id/profileFname"
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="225dp"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profileLname"
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="225dp"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstNameInput" />

        <TextView
            android:id="@+id/profileGender"
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="225dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastNameinput" />

        <TextView
            android:id="@+id/loginEmail4"
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="225dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genderInput" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="225dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genderInput" />

        <TextView
            android:id="@+id/profilePhone"
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="225dp"
            android:text="Phone No"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genderInput" />

        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="323dp"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/edit_tx"
            android:ems="10"
            android:hint="Dave"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/lastNameinput"
            android:layout_width="323dp"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="244dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/edit_tx"
            android:ems="10"
            android:hint="Bulner"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/genderInput"
            android:layout_width="323dp"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="348dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/edit_tx"
            android:ems="10"
            android:hint="Male"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/profileEmailinput"
            android:layout_width="323dp"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="448dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/edit_tx"
            android:ems="10"
            android:hint="bulner@gmail.com"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/profilePhoneInput"
            android:layout_width="323dp"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="552dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/edit_tx"
            android:ems="10"
            android:hint="07144587454"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="323dp"
            android:layout_height="44dp"
            android:background="@drawable/btn"
            android:backgroundTint="#1C1B1B"
            android:text="SAVE"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.957" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/white"
        android:text="EDIT"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/circularImageView"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>